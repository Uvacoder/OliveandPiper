{% schema %}
{
  "name": "Header",
  "settings": [
    {
        "type":      "header",
        "content":   "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Image",
      "info": "250 x 133px recommended"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 100,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Width (in pixels)",
      "default":250
    },
    {
      "type": "range",
      "id": "logo_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding around logo (in pixels)",
      "default": 20
    },
    {
      "type": "select",
      "id": "logo-placement",
      "label": "Placement",
      "options": [
        {
          "value": "below-header",
          "label": "Centered (below header)"
        },
        {
          "value": "within-header",
          "label": "Centered (within header)"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "below-header"
    },
    {
      "type": "header",
      "content": "Top bar"
    },
    {
      "type": "link_list",
      "id": "top_bar_linklist",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "social-enable",
      "label": "Enable social media icons",
      "default": true,
      "info": "Edit your social settings and accounts in General settings"
    },
    {
      "type": "checkbox",
      "id": "search-enable",
      "label": "Enable search",
      "default": true
    },
    {
      "type": "header",
      "content": "Main menu"
    },
    {
      "type": "link_list",
      "id": "main_linklist",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "range",
      "id": "menu_padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Padding around 'main menu' (in pixels)",
      "default": 10
    }
  ]
}
{% endschema %}
